# 文字コードの設定
defutf8 on
defencoding utf8
encoding utf-8 utf-8

# ステータスラインを表示
hardstatus alwayslastline "[%m/%d %0c] %0`%-w%{= bW}%n %t%{-}%+w"

# エスケープキーを変更
escape ^Zz

# シェルとして zsh を使用
shell zsh

# スタートアップメッセージを非表示
startup_message off

# 別画面でのスクリーンプログラムの実行を許可
altscreen on

# ウィンドウの移動
bindkey ^n next

