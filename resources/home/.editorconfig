root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2

[*.dart]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2

[*.ls]
indent_style = space
indent_size = 2

[*.{css,less,scss,styl}]
indent_style = space
indent_size = 2

[*.{pl,pm,t}]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{htm,html,ejs}]
indent_style = space
indent_size = 2

[*.jade]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.cr]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
